  views: `<path d="M2 16l5-5 3 3 4-4 7 7M2 20h20" stroke="${color}" stroke-width="1.5" fill="none" stroke-linecap="round" stroke-linejoin="round"/><circle cx="18" cy="6" r="2.5" stroke="${color}" stroke-width="1.5" fill="none"/>`,
  land: `<path d="M12 3v3M5.6 5.6l2.1 2.1M3 12h3M5.6 18.4l2.1-2.1M18.4 5.6l-2.1 2.1M21 12h-3M18.4 18.4l-2.1-2.1" stroke="${color}" stroke-width="1.5" fill="none" stroke-linecap="round"/><path d="M2 20c4-3 8-6 10-6s6 3 10 6" stroke="${color}" stroke-width="1.5" fill="none" stroke-linecap="round"/>`,
};

const svg = icons[name] || icons.house;
---

<svg
  xmlns="http://www.w3.org/2000/svg"
  width={size}
  height={size}
  viewBox="0 0 24 24"
  class="icon"
  set:html={svg}
/>

<style>
  .icon {
    display: block;
    margin: 0 auto;
  }
</style>
