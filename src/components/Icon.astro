  pool: `<path d="M2 18c1.5 1 3 1.5 4.5 0s3-1 4.5 0 3 1.5 4.5 0 3-1 4.5 0M2 22c1.5 1 3 1.5 4.5 0s3-1 4.5 0 3 1.5 4.5 0 3-1 4.5 0M6 12V4a2 2 0 012-2h0a2 2 0 012 2v1M18 12V4a2 2 0 00-2-2h0a2 2 0 00-2 2v1M10 5h4" stroke="${color}" stroke-width="1.5" fill="none" stroke-linecap="round" stroke-linejoin="round"/>`,
  factory: `<path d="M2 20h20M4 20V8l4 3V8l4 3V4h8v16" stroke="${color}" stroke-width="1.5" fill="none" stroke-linecap="round" stroke-linejoin="round"/><rect x="14" y="10" width="2" height="3" rx="0.5" stroke="${color}" stroke-width="1.2" fill="none"/><rect x="18" y="10" width="2" height="3" rx="0.5" stroke="${color}" stroke-width="1.2" fill="none"/>`,
