  bar: `<path d="M8 2l4 10 4-10M12 12v6M8 21h8" stroke="${color}" stroke-width="1.5" fill="none" stroke-linecap="round" stroke-linejoin="round"/><circle cx="17" cy="4" r="2" stroke="${color}" stroke-width="1.2" fill="none"/><path d="M15.5 2.5L19 6" stroke="${color}" stroke-width="1.2" stroke-linecap="round"/>`,
